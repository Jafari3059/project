#include <iostream>
#include <string>
using namespace std;

// capacity of courses
const int MAX_COURSES = 100;

enum Day {
      SUNDAY,
      MONDAY,
      TUESDAY,
      WEDNESDAY,
      THURSDAY,
      FRIDAY,
      SATURDAY
};

class Time {
      public:
      int startingHour;
      int startingMinute;
      int hourDuration;
      int minuteDuration;
      
      public: Time() {
            startingHour = 0;
            startingMinute = 0;
            hourDuration = 0;
            minuteDuration = 0;
      }
      
      public: Time(int startingHour, int startingMinute, int hourDuration, int minuteDuration)
      {
            this->startingHour = startingHour;
            this->startingMinute = startingMinute;
            this->hourDuration = hourDuration;
            this->minuteDuration = minuteDuration;
      }
};

class ClassLocation {
      int classNumber;
      
      public: ClassLocation(int classNumber = 0)
      {
            this->classNumber = classNumber;
      }
      
      
      bool compareCoursesDuration(Course course1, Course course2)
      {
            if (course1->time->hourDuration > course2->time->hourDuration)
                  return true;
            else if (course1->time->hourDuration == course2->time->hourDuration)
            {
                  if (course1->time->minuteDuration > course2->time->minuteDuration)
                        return true;
                  else
                        return false;     
            }
            else
                  return false;
      }
};

class Course {
      public:
      string id;
    string name;
    string teacher;
    Day day;
    Time time;
    bool hasProjector;
    int studentCapacity;
    int* studentList;
    ClassLocation classLocation;
   
    Course(string id, string name, string teacher, Day day, Time time, bool hasProjector, int studentCapacity, ClassLocation location)
    {
      this->id = id;
      this->name = name;
      this->teacher = teacher;
      this->day = day;
      this->time = time;
      this->hasProjector = hasProjector;
      this->studentCapacity = studentCapacity;
      this->classLocation = classLocation;
      int* studentList = new int[studentCapacity];
      }
};


int main(void){return 0;}